{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with LLDB",
            "type": "lldb",
            "request": "launch",
            "preLaunchTask": "Rust: Compile",
            "program": "${workspaceFolder}/Rust/${fileBasenameNoExtension}",
